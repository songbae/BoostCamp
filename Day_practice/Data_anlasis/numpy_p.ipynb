    "import numpy as np\n",
    "n=5000\n",
    "step=1000\n",
    "draws=np.random.randint(0,2,(n,step))\n",
    "steps=np.where(draws>0,1,-1)\n",
    "walks=steps.cumsum(1)\n",
    "print(walks)\n",
    "print(walks.max())\n",
    "print(walks.min())\n",
    "print(walks.argmin())\n",
    "print(walks.argmax())"
